<% title "Animations" %>

<table>
  <tr>
    <th>Project</th>
    <th>User</th>
  </tr>
  <% for animation in @animations %>
    <tr>
      <td><%= animation.project %></td>
      <td><%= animation.user %></td>
      <td><%= link_to "Show", animation %></td>
      <td><%= link_to "Edit", edit_animation_path(animation) %></td>
      <td><%= link_to "Destroy", animation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Animation", new_animation_path %></p>
