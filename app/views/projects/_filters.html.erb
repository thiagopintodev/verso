<div style="width:450px;margin-right:55px;float:left;">
<h2>Filtro</h2>
<ul class="pagination">
  <%= content_tag :li, :class=>('selected' if params[:versioned]) do %>
    <%= link_to projects_filter_path(:versioned=>1) do %>
      Apenas Cadastradas (<b><%= Project.cached_quantidade_versionadas %></b>)
    <% end %>
  <% end %>
  
  
</ul>
</div>
<div style="width:450px;float:left;">
<h2>Enviadas para o Ava</h2>
<ul class="pagination">
  <%= content_tag :li, :class=>('selected' if params[:status_producao] == '0') do %>
    <%= link_to projects_filter_path(:status_producao=>0) do %>
      Não Enviado (<b><%= Project.cached_group_producao[0] %></b>)
    <% end %>
  <% end %>
  <%= content_tag :li, :class=>('selected' if params[:status_producao] == '1') do %>
    <%= link_to projects_filter_path(:status_producao=>1) do %>
      Enviado (<b><%= Project.cached_group_producao[1] %></b>)
    <% end %>
  <% end %>
</ul>
</div>


<br style="clear:both" />

<div style="width:450px;margin-right:55px;float:left;">
<h2>Revisão Texto</h2>
<ul class="pagination">
  <% Project::REVISOES.each do |texto, codigo| %>
    <%= content_tag :li, :class=>('selected' if codigo.to_s == params[:status_revisao_texto]) do %>
      <%= link_to projects_filter_path(:status_revisao_texto=>codigo) do %>
        <%= texto %> (<b><%= Project.cached_group_revisao_texto[codigo] || 0 %></b>)
      <% end %>
    <% end %>
  <% end %>
</ul>
</div>

