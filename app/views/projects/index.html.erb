<%= render 'filters' %>

<h2>Aulas</h2>
<h3 style="text-align:right">Resultados: <%= @projects.length %> Aula(s)</h3>

				<ul class="work fullWork clearfix">
  <% for project in @projects %>
			<li id="id3" class="films">
			  <a href="<%= project_path(project) %>" class="gallery" rel="films" title="Clique para ver a aula" style='text-align:center'>
			    <%= image_tag project.capa.url, :height=>145 %>
			  <p>
			    <%= project.subject.nome %> /
			    <%= project.degree.to_s %>
			  </p>
			  <p class="sequencia">
			    <strong><%= project.sequencia %>a Aula</strong>
			  </p>
			  <p>
		      <strong>(<%= project.versions.size %> versoes)</strong>
		    </p>
			  </a>
			</li>
  <% end %>
		</ul>
<hr />

<p><%= link_to "Cadastrar Aula", new_project_path(:subject=>params[:subject], :degree=>params[:degree]) %></p>

