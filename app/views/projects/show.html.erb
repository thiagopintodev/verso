<% set_page_css(:full) %>
<% content_for :jsload do %>  
  $( "#tabs" ).tabs();
  
  $("form").submit(function(){
    $("input:submit").hide();
    $(".enviando").fadeIn(1200);
  });
  $("img[rel='capa']").click(function(){
    $('#capa_escondida').slideToggle('slow');
  });
<% end %>
	
<div class="verso-ui">
  <table id="project_show">
    <tbody>
      <tr>
        <td style="padding-right:50px">
          <%= render @project %>
        </td>
        <td width="600">
          
          <%= image_tag(@project.capa.url, :id=>'capa_escondida', :width=>'600', :style=>'display:none', :rel=>'capa') %>
          
          <div id="tabs">
	          <ul>
		          <li><a href="#tabs-1">Revis√µes</a></li>
		          <li><a href="#tabs-2">Arquivos</a></li>
	          </ul>
	          <div id="tabs-1">
              <%= render 'reviews' %>
	          </div>
	          <div id="tabs-2">
		          <%= render 'files' %>
	          </div>
          </div>
        
        
        </td>
      </tr>
    </tbody>
  </table>
</div>
