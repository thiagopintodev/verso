              <%= link_to image_tag('verso/Swf-32.png'), version.swf1.url %>
              <%= number_to_human_size version.swf1.size %>
            </p>
            <p>
              <a href='#' rel='swf'>ampliar/reduzir</a>
            </p>
          <% end %>
