

<% @project.versions.each do |v|  %>
  <% if v.new_record? %>
  <% v = ProjectVersionDecorator.new v %>
    <h2>Cadastro</h2>
    <table class="versoes">
      <tr>
        <td class="arquivos">
          <%= v.conteudo_arquivos_capa if v.tipo_animacao? %>
          <%= v.conteudo_arquivos_animacao if v.tipo_animacao? %>
          <%= v.conteudo_arquivos_recurso if v.tipo_recurso? %>
        </td>
      </tr>
    </table>
    <h2 class="rodape"></h2>
  <% end %>
<% end %>


<h2>Arquivos</h2>
  
<table class="versoes">
  <% @project.versions.reverse.each do |v|  %>
    <% unless v.new_record? %>
    <% v = ProjectVersionDecorator.new v %>
    <tr>
      <td class="usuario">
        <%= v.conteudo_usuario %>
      </td>
    </tr>
    <tr>
      <td class="arquivos">
        <%= v.conteudo_arquivos_animacao if v.tipo_animacao? %>
        <%= v.conteudo_arquivos_recurso if v.tipo_recurso? %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
<h2 class="rodape"></h2>
