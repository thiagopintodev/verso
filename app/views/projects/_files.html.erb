<h2>Cadastro</h2>

<table class="versoes">
  <% @project.versions.each do |v|  %>
    <% if v.new_record? %>
    <% v = ProjectVersionDecorator.new v %>
    <tr>
      <td class="left">
        <%= v.conteudo_esquerda %>
      </td>
      <td class="right">
        <%= v.conteudo_direita_animacao if v.tipo_animacao? %>
        <%= v.conteudo_direita_recurso if v.tipo_recurso? %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
<br /><br />

<h2>Arquivos</h2>
  
<table class="versoes">
  <% @project.versions.reverse.each do |v|  %>
    <% unless v.new_record? %>
    <% v = ProjectVersionDecorator.new v %>
    <tr>
      <td class="left">
        <%= v.conteudo_esquerda %>
      </td>
      <td class="right">
        <%= v.conteudo_direita_animacao if v.tipo_animacao? %>
        <%= v.conteudo_direita_recurso if v.tipo_recurso? %>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>
