<% content_for :jsload do %>
$("a[rel='swf']").click(function() {
  $('#player').html( $(this).data('swf-content') );
  return false;
});

$("a[rel='#nova-versao']").overlay();

$("form#new_project_version").submit(function() {
  if ($("#project_version_texto").val().length < 5)
  {
    alert("Preencha um comentário");
    $("#project_version_texto").focus();
    return false;
  }
});
<% end %>

<%= form_for @project_version do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :project_id %>
  
  <table style="font-size:35px; font-weight: bold;">
  <tbody>
    <tr>
      <td>
        <%= @project_version.project.subject.nome %>
      </td>
      <td>
        <%= @project_version.project.degree.to_s %>
      </td>
      <td>
        <%= @project_version.project.sequencia %>a Aula
      </td>
    </tr>
  </tbody>
  </table>
  
  <table>
    <tbody>
      <tr>
        <td colspan="2">
          <%= f.label :fla, "Fontes *.FLA" %>
          <br />
          <%= f.file_field :fla %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :swf1, "CENA 1 *.SWF" %>
          <br />
          <%= f.file_field :swf1 %>
        </td>
        <td>
          <%= f.label :swf, "CENA 2 *.SWF" %>
          <br />
          <%= f.file_field :swf2 %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :swf, "CENA 3 *.SWF" %>
          <br />
          <%= f.file_field :swf3 %>
        </td>
        <td>
          <%= f.label :swf, "CENA 4 *.SWF" %>
          <br />
          <%= f.file_field :swf4 %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
	        <%= f.text_area :texto, :title=>"Escreva seus comentarios sobre essa versão", :class=>"hint" %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <div class="formSection" id="formSectionComment">
    <div class="formLabel">
	    <%= f.label :texto %>
    </div>
    <div class="formTextarea">
    </div>
  </div>

  <div class="formSubmit" style='text-align:right'>
    <button type="submit" name="submit" id="submit">Cadastrar Versão para esta Aula</button>
  </div>
  
<% end %>
